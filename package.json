{
    "name": "openclue-kai",
    "description": "An open-source version of Cluely - AI-powered screen assistant",
    "author": {
        "name": "OpenClue Kai Contributors",
        "email": "openclue@example.com"
    },
    "version": "1.0.2",
    "main": "app/index.js",
    "scripts": {
        "dev": "vite",
        "build:electron": "node ./esbuild.config.mjs",
        "build:renderer": "vite build",
        "build:dev:electron": "node ./esbuild.config.mjs --watch",
        "build": "npm run build:renderer && npm run build:electron",
        "lint": "eslint .",
        "preview": "vite preview",
        "start": "electronmon ./app",
        "electron:vite:build": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && npm run build:dev:electron\"",
        "electron:dev": "concurrently \"npm run electron:vite:build\" \"npm run start\"",
        "dist": "npm run build && electron-builder --config electron-builder.config.js",
        "dist:win": "npm run build && electron-builder --config electron-builder.config.js -w",
        "dist:mac": "npm run build && electron-builder --config electron-builder.config.js -m",
        "dist:linux": "npm run build && electron-builder --config electron-builder.config.js -l"
    },
    "dependencies": {
        "@tailwindcss/typography": "^0.5.16",
        "electron-log": "^5.3.0",
        "electron-serve": "^2.1.1",
        "electron-store": "^10.1.0",
        "electron-updater": "^6.3.9",
        "electronmon": "^2.0.3",
        "esbuild": "^0.25.5",
        "framer-motion": "^12.18.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hot-toast": "^2.4.1",
        "react-icons": "^5.4.0",
        "react-markdown": "^10.1.0",
        "tesseract.js": "^6.0.1"
    },
    "devDependencies": {
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "electron": "^33.3.1",
        "electron-builder": "^25.1.8",
        "eslint": "^9.17.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.16",
        "globals": "^15.14.0",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.18.2",
        "vite": "^6.0.5",
        "wait-on": "^8.0.2"
    },
    "build": {
        "extends": null,
        "appId": "com.openclue.kai",
        "productName": "OpenClue Kai",
        "copyright": "Copyright Â© 2024 OpenClue Kai Contributors",
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Utility",
            "icon": "assets/icons/icon.png"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "assets/icons/icon.png"
        },
        "mac": {
            "category": "public.app-category.utilities",
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "assets/icons/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "dist/**/*",
            "app/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "release"
        }
    }
}
